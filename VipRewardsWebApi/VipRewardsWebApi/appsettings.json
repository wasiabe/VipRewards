{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      //1. 輸出為 JSON 格式
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.json",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      // 2. 輸出為 一般純文字格式
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "DotNet8ApiTemplate"
    }
  },
  "IpAllowlist": {
    "Mode": "ProxyAndXForwardedFor", //SourceIpOnly or ProxyAndXForwardedFor
    "TrustedProxies": [
      "127.0.0.1"
    ],
    "Allow": [
      "127.0.0.1",
      "::1"
    ]
  },
  "RateLimit": {
    "PermitLimit": 6000, //在一個時間視窗內，允許通過的 最大請求次數。
    "WindowSeconds": 60, //時間視窗的長度（單位為秒）。
    "QueueLimit": 0 //當 PermitLimit 的額度用完時，允許排隊等待的請求數量。
  },
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost\\sqlexpress;database=VIPRewards;Integrated Security=true;trusted_connection=true;TrustServerCertificate=true",
    "TcbVipDb": "Server=10.20.13.28;Database=VIPRewards;User ID=APP_VIPRewards;Password=APP_Tcblife_1;Trusted_Connection=True;Integrated Security=False;MultipleActiveResultSets=True;TrustServerCertificate=true"
  },
  "WebApiRequestLog": {
    "Enabled": true,
    "EnableBatchWrite": true, //啟用批次寫入
    "IncludedPathPrefixes": [ "/demo", "/api" ],
    "ExcludedPathPrefixes": [ "/swagger", "/health" ],
    "ExcludedPathPrefixesHard": [ "/auth", "/oauth", "/token", "/signin", "/callback" ],

    "LogRequestHeaders": true,
    "LogRequestBody": true,
    "LogResponseBody": true,

    "RequestBodyContentTypesAllowList": [ "application/json", "text/plain", "application/x-www-form-urlencoded" ],
    "ResponseBodyContentTypesAllowList": [ "application/json", "application/problem+json", "text/plain" ],

    //Body上限, 超過則截斷
    "MaxBodyChars": 50000,

    //含機敏資訊的Header不記錄LOG
    "SensitiveHeaders": [ "Authorization", "Cookie", "Set-Cookie", "X-Api-Key" ],

    //含機敏資訊的JSON Keys的內容不記錄LOG
    "SensitiveJsonKeys": [ "password", "token", "access_token", "refresh_token", "secret" ]
  },
  "OneTimeKeyOptions": {
    "KeyTtlSeconds": 120,
    "RsaKeySize": 2048
  },
  "HmacToken": {
    "CacheMinutes": 10,
    "KeyBytes": 32
  },
  "XOGatewayBO": {
    "Company": "TCBLIFE",
    "XOGatewayToken": "2EB04123-B3F8-4B16-A510-C6A0FC42F6DE",
    "BaseUrl": "http://localhost:9001",
    "Url": "http://localhost:9001/XOGatewayBO/XOGatewayBOService.asmx"
  },
  "AllowedHosts": "*"
}
